


<div class="container">
	
	<div class="row">
		<li>
		<aside class="col-md-2">
			<%= link_to friend.name, friend %>
		</aside>

		<aside class="col-md-2">
			<%= form_for current_user.friendships.find_by(friend: friend.id), method: :delete do |f| %>
			<%= f.hidden_field :friend, :value => friend.id %>
			
			<%= f.submit "Unfriend", data: { confirm: "Are you sure?" }, class: "btn btn-group btn-primary btn-sm" %>
		<% end %>	

		</aside>
    </li>
	</div>

</div>

								
