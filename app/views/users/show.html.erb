

<%= provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>



<div class="row">
  <% if signed_in_user? %>
	<%= link_to "edit user", edit_user_registration_path %>
  <% end %>


</div>

<% if signed_in_user? %>
  <%= link_to "Friends", friendships_path %>
<% end %>  



<% if !current_user?(@user) && not_friends(@user) && not_already_sent(@user) %>  
        <%= form_for current_user.requests.build do |f| %>
        <%= f.hidden_field :pending_friend, :value => @user.id %>
      
        <%= f.submit "Send Friend Request", class: "btn btn-primary btn-sm" %>
        <% end %>

<% end %>                               
